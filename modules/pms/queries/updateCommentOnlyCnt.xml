<query id="updateCommentOnlyCnt" action="update">
    <tables>
        <table name="pms_comment" />
    </tables>
    <columns>
		<column name="reply_cnt" var="reply_cnt" />
		<column name="file_cnt" var="file_cnt" />
    </columns>
		<conditions> 
        <condition operation="equal" column="comment_srl" var="comment_srl"   notnull="notnull" />   
    </conditions>
</query>	
